<h1>Books</h1>
<% @books.each do |book| %>
 <div class="book-item">
     <div class="book-title"><%= book.title %></div>
     <div class="book-body"><%= book.body %></div>
 </div>
<% end %>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
    
<% end %>